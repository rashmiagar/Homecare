<div id="bottompane">
    <%= flash[:notice] %>
  <h1> Create Request </h1>
<div class="editform">
  <p>
  <% form_for(:service_transactions, :url =>"/request" , :method => "post") do |f| %>
  
    <span style="float:left;margin-right:10px">Service: </span><%= select_tag(:service_id, options_from_collection_for_select(@services, 'id', 'service_name', 1), :id => "serviceselect") %><br/>


    <div id="labordiv" >
