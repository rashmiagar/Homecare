
<div style="margin:25px">
<span class = "help-inline"><%= flash[:notice] %> </span>
<h2> User Report </h2>
<table id="labortable" class="table table-bordered table-striped">
<thead>
<tr>
	<th><b>User id</b></th>
	<th><b>Username</b></th>
	<th><b>Firstname</b></th>
	<th><b>Lastname</b></th>
	<th><b>Birthday</b></th>
	<th><b>Email</b></th>
	<th><b>Phone number </b></th>
	<th><b>Action</b></th>
</tr>
</thead>
<tbody>
<% @users.each do |req| %>
	<tr>
		<td><%= req.id %></td>
		<td><%= req.username %></td>
		<td><%= req.firstname %></td>
		<td><%= req.lastname %></td>
		<td><%= req.birthday %></td>
		<td><%= req.email %></td>
		<td><%= req.phone %></td>
		<% if req.status == 'active' %>
			<td><%= link_to "Deactivate",  deactivate_report_path(req.id), :class => 'btn btn-warning' %></td>
		<% else %>
			<td><%= link_to "Activate",   activate_report_path(req.id), :class => 'btn btn-success' %></td>
		<% end %>
	</tr>
<% end %>
</tbody>
</table>
</div>
