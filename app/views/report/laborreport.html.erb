
<div style="margin-left:25px;">
<span class = "help-inline"><%= flash[:notice] %> </span>
<h2> Labor Report </h2>
<table id="labortable" class="table table-bordered table-striped">
<thead>
<tr>
	<th><b>Labourer Id</b></th>
	<th><b>Labourer Name</b></th>
	<th><b>Service Type</b></th>
	<th><b>Action</b></th>
</tr>
</thead>
<tbody>
<% @labors.each do |serv| %>
	<tr>
		<td><%= serv.id %></td>
		<td><%= serv.labor_name %></td>
		<td><%= TypesOfService.getname(serv.types_of_service_id) %></td>
		<td><%= link_to "Remove", labor_path(serv), :confirm => 'Are you sure?',:method => :delete, :class => 'btn btn-danger' %> | <%= link_to "Deactivate",  '', :class => 'btn btn-warning' %></td>
	</tr>
<% end %>
</tbody>
</table>
</div>
